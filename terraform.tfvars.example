# AWS Configuration
aws_region = "us-east-1"
environment = "production"

# Application Configuration
app_name = "story-tts"
ecr_repository_name = "story-tts"
app_image_tag = "latest"
app_count = 1

# ECS Configuration
cpu = 1024
memory = 2048
app_port = 8000

